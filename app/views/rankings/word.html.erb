<h3>Wordランキング</h3>
<% if @ranking_counts.present? %>

<table class = "table">
  <thead>
      <tr>
        <th>順位</th>
        <th>ワード</th>
        <th>利用回数</th>
      </tr>
  </thead>
  <tbody>
    <% @ranking_counts.each_with_index do |(key,value),index| %>
      <tr>
        <td><%= index+1 %>位
        <td><%= key %></td>
        <td><%= value %></td>
      <tr>
    <% end %>
    
  <tbody>
    
<% end %>