<table class = "table table-striped">
  <thead>
      <tr>
        <th>しりとり番号</th>
        <th>最終投稿者名</th>
        <th>最終投稿内容</th>
        <th>しりとり開始日時</th>
        <th>しりとり終了日時</th>
      </tr>
  </thead>
  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%=history.id%></td>
        <td><%=history.shiritoris.last.name%></td>
        <td><%=history.shiritoris.last.word%></td>
        <td><%=history.shiritoris.first.created_at%></td>
        <td><%=history.shiritoris.last.created_at%></td>
      </tr>
    <% end %>

  </tbody>
</table>    
